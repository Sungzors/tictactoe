<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.sungwon.tictactoe.Tictactoe_Layout"
    android:layout_gravity="center"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tumblr_m0iunuwn7k1qzp9weo6_1280"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_gravity="top|center"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/playerNameT"
            android:textSize="40sp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textColor="@color/textcolor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/turnwin"
            android:textSize="40sp"
            android:layout_gravity="end"
            android:id="@+id/turnwin"
            android:textColor="@color/textcolor"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:rowCount="3"
        android:columnCount="3"
        >

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/button1"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/button2"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="0"
        android:layout_column="2"
        android:id="@+id/button3"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/button4"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="1"
        android:layout_column="1"
        android:id="@+id/button5"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="1"
        android:layout_column="2"
        android:id="@+id/button6"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/button7"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="2"
        android:layout_column="1"
        android:id="@+id/button8"/>

    <Button
        android:layout_width="@dimen/tictactoe"
        android:layout_height="@dimen/tictactoe"
        android:layout_row="2"
        android:layout_column="2"
        android:id="@+id/button9"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_gravity="bottom|right"/>
</FrameLayout>